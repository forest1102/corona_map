{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [
      "webpack-env"
    ],
		"paths": {
			"@/*": [
        "src/*"
      ],
			"vuetify/lib": ["./node_modules/vuetify/types"]
		},
		"lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
	},
	"include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
	"exclude": [
    "node_modules",
    "src/@types/*.d.ts"
  ]
}